{
  "compilerOptions": {
    // Path aliases
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    },
    "rootDirs": [".", "./.svelte-kit/types"],
    
    // Module resolution
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    
    // Svelte specific
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    
    // Type checking
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noImplicitAny": false,
    
    // Interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // Other
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [
    "./.svelte-kit/ambient.d.ts",
    "./.svelte-kit/types/**/$types.d.ts",
    "./vite.config.js",
    "./vite.config.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./tests/**/*.js",
    "./tests/**/*.ts",
    "./tests/**/*.svelte"
  ],
  "exclude": [
    "./node_modules/**",
    "./.svelte-kit/**"
  ]
}
